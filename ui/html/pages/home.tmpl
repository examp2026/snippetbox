{{define "title"}}Home{{end}}

{{define "main"}}

<div class="container">
  <div class="card">
    <h2>Latest snippets</h2>

    {{if .Snippets}}
    <table class="snippets-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Created</th>
          <th>ID</th>
        </tr>
      </thead>
      <tbody>
        {{range .Snippets}}
        <tr>
          <td>
            <a href="/snippet/view/{{.ID}}">{{.Title}}</a>
          </td>
          <td>{{.Created}}</td>
          <td>#{{.ID}}</td>
        </tr>
        {{end}}
      </tbody>
    </table>
    {{else}}
      <p class="empty">There's nothing to see here... yet!</p>
    {{end}}
  </div>
</div>

{{end}}

